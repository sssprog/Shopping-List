<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="actionBarStyle">@style/AppWidget.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:spinnerStyle">@style/AppWidget.SpinnerStyle</item>
    </style>

    <style name="AppTheme.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <string name="font_roboto_light" translatable="false">fonts/Roboto-Light.ttf</string>
    <string name="font_roboto_regular" translatable="false">fonts/Roboto-Regular.ttf</string>
    <string name="font_roboto_medium" translatable="false">fonts/Roboto-Medium.ttf</string>

    <style name="TextAppearance.AppTheme.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Display3" parent="TextAppearance.AppCompat.Display3">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Display2" parent="TextAppearance.AppCompat.Display2">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontPath">@string/font_roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontPath">@string/font_roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontPath">@string/font_roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppWidget" />

    <style name="AppWidget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:elevation">@dimen/actionbar_elevation</item>
        <item name="elevation">@dimen/actionbar_elevation</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppWidget.MaterialEditText">
        <item name="met_primaryColor">?colorAccent</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_baseColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="met_underlineColor">@color/light_10p</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppWidget.MaterialEditText.NoFloatingLabel">
        <item name="met_floatingLabel">none</item>
    </style>

    <style name="AppWidget.SpinnerStyle" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

</resources>
